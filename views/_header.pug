header.header
    nav.nav.nav--tours 
        a.nav__el(href="#") All tours
    .header__logo 
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user 
        if user 
            btn.nav__el.nav__el--logout Logout
            a.nav__el(href='/account')
                    img.nav__user-img(src=`/img/users/${user.photo?user.photo:'default.jpg'}` alt=`${user.name}`) 
                    span#nav__username=user.name.split(" ")[0]  
        else 
            a.nav__el(href="/login") Login 
            a.nav__el.el__cta(href="/login") Signup